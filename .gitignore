def verificador_palindromo():
    return verificador_palindromo
frase = str(input('Digite uma frase  ')).strip().upper() #eliminou os espaços antes e depois e jogou tudo para maiuscula
palavras = frase.split() #sliptou a frase para que gere uma lista
junto = ''.join(palavras) #juntou a lista para eliminar os espaços
inverso = ''
for letra in range(len(junto) -1, -1, -1): #aqui começa o inverso
    inverso += junto[letra]
if inverso == junto:
    print('Temos um palindromo')
else:
    print('A frase digitada não é um palindromo')



